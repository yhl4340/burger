

    <div class="row justify-content-center">
        <div class="col-3 ">
    
        <h3>Ready to be devoured!
            <hr/>
            <ul>
                {{#each burgers}}
                {{!-- if this burger is not devoured, display --}}
                    {{#unless devoured}}

                    {{!-- <li>{{this.burger_name}}</li> --}}
                    {{> burgers/burger-block devoured=false}}
                    
                    {{/unless}}
                {{/each}}
            </ul>
        </h3>
    </div>  

    <div class="col-3 ">
        <h3>Burgers already devoured!
            <hr/>
            <ul>
                {{#each burgers}}
                {{!-- if this burger is devoured then display --}}
                    {{#if devoured}}
                    {{!-- <li>{{id}}. {{this.burger_name}}</li> --}}
                    {{> burgers/burger-block devoured= true}}
                    {{/if}}
                {{/each}}
            </ul>
        </h3>
    </div> 
</div>
